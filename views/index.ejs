<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #c5c6c7; /* Light grey background for the page */
        }
        .container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #080707; /* Dark red color for the title */
        }
        .btn {
            margin: 0 5px;
        }
        .table {
            background-color: #343a40;
            color: white;
        }
        .table th {
            background-color: #343a40; /* Dark background for table header */
            color: white;
            text-align: center;
        }
        .table td {
            background-color: white;
            color: black;
            text-align: center;
        }
        .table .btn {
            padding: 5px 10px;
        }
        .btn-danger {
            background-color: #dc3545;
        }
        .btn-warning {
            background-color: #ffc107;
            color: white;
        }
        .btn-info {
            background-color: #17a2b8;
            color: white;
        }
        .btn-primary {
            background-color: #007bff;
            color: white;
        }
        .btn-sm {
            font-size: 0.875rem;
        }
        .actions {
            display: flex;
            justify-content: center;
        }
        .btn-group {
            display: flex;
            gap: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">User Management</h1>
        <a href="/create" class="btn btn-primary mb-3">Add New User</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.gender %></td>
                        <td class="actions">
                            <div class="btn-group">
                                <a href="/edit/<%= user._id %>" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/delete/<%= user._id %>" method="POST" style="display:inline;">
                                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
